<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFAF4">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:tint="@color/black"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesan"
            android:layout_toEndOf="@id/btn_back"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <!-- Blue underline -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#4285F4" />

    <!-- Chat messages list -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"/>

    <!-- Chat input -->
    <LinearLayout
        android:id="@+id/message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/background_radius_3sisi_2"
        android:gravity="center_vertical"

        >

        <EditText
            android:id="@+id/Pesan_chat"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Tulis pesan..."
            android:background="@drawable/background_rauded_white"
            android:textColor="#000000"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:inputType="text" />

        <ImageView
            android:id="@+id/button_kirim"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:src="@drawable/send"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#4285F4"
            android:contentDescription="Kirim"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>
