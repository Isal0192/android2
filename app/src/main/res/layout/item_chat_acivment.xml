<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/background_rauded_white"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:text="Pesan dari orang lain"
            android:background="@drawable/background_rauded_white"
            android:textColor="#000000"
            android:layout_marginBottom="7dp"/>

        <LinearLayout
            android:id="@+id/action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_setujui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_rauded_white"
                android:backgroundTint="@color/warna_ijo"
                android:text="setujui" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_tolak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_rauded_white"
                android:backgroundTint="@color/warna_abu"
                android:text="Tolak" />
        </LinearLayout>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/isi_penitipan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="isi detail penitipan"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_rauded_white"
            android:backgroundTint="@color/warna_ijo"
            android:visibility="gone"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/proses_penitipan"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="proses penjualan"
            android:layout_gravity="center"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_rauded_white"
            android:backgroundTint="@color/warna_ijo"
            android:visibility="gone"/>

<android.support.v7.widget.AppCompatButton
            android:id="@+id/pengajuan_ditolak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengajuan di tolak. jangan patah semangat"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_rauded_white"
            android:backgroundTint="@color/warna_abu"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>
