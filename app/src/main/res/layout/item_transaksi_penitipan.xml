<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvNamaProdukTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="Produk: Nama Produk Titipan" />

        <TextView
            android:id="@+id/tvNamaWarungTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:text="Warung: Nama Warung (Nama Pemilik)" />

        <TextView
            android:id="@+id/tvJumlahTerjualTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:text="Terjual: 5 unit" />

        <TextView
            android:id="@+id/tvTotalPenjualanTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/warna_ijo"
            android:textStyle="bold"
            android:text="Total Penjualan: Rp 50.000" />

        <TextView
            android:id="@+id/tvPendapatanPenitipTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/warna_ijo"
            android:textStyle="bold"
            android:text="Pendapatan Anda: Rp 20.000" />

        <TextView
            android:id="@+id/tvTanggalTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textStyle="italic"
            android:text="Tanggal: 15 Juni 2025, 10:30" />

        <TextView
            android:id="@+id/tvCatatanTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:text="Catatan: Tidak ada" />

    </LinearLayout>

</android.support.v7.widget.CardView>